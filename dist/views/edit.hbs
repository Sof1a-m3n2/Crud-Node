<div class="container mt-5" >
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                    <div class="card-header">
                        <h4>Editar
                    </div>
                    <div class="card-body">
                        <form action="/edit/{{task._id}}" method="POST">
                            <div class="mb-3">
                                <label for="titulo">Titulo</label>
                                <input type="text" name="titulo" id="titulo" value="{{task.titulo}}" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="descripcion">Descripcion</label>
                                <textarea  name="descripcion" id="des" class="form-control">{{task.descripcion}}</textarea>                             
                            </div>
                            <div class="mb-3">
                                <button  class="btn btn-primary">Editar</button>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>

    

